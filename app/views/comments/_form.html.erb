<%= form_for([@automobile, @automobile.comments.build]) do |f| %>
  <div class="form-group">
    <% if user_signed_in? %>
      <%= f.hidden_field :name, class: 'text_field', value: current_user.email %>
    <% else %>
      <%= f.hidden_field :name, class: 'text_field', value: "anonymous" %>
    <% end %>
  </div>
  <div class="form-group">
    <div class="col-md-12">
      <%= f.label :Create_comment, class: 'control-label col-md-2' %>
    </div>
    <div class="col-md-10">
      <%= f.text_field :body, class: 'text_field form-control' %>
    </div>
    <div class='col-md-2'>
      <%= f.submit nil, class: 'btn btn-custom' %>
    </div>
  </div>
<% end %>