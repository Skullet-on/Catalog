<div class="panel panel-primary">
  <div class="panel-heading"><strong><%= comment.name %></strong> <%= time_ago_in_words(comment.created_at) %> ago</div>
  <div class="panel-body">
    <%= comment.body %>
  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="col-sm-2">
        <%= link_to [comment.automobile, comment, "upvote"], class: "like", method: :put do %>
          <button type="button" class="btn btn-custom" aria-label="Left Align">
            <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
            <span class="badge"><%= comment.get_upvotes.size %></span>
          </button>
        <% end%>
        <%= link_to [comment.automobile, comment, "downvote"], class: "unlike", method: :put do %>
          <button type="button" class="btn btn-custom" aria-label="Left Align">
            <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>
            <span class="badge"><%= comment.get_downvotes.size %></span>
          </button>
        <% end%>
      </div>

      <div class="col-sm-9">
      </div>
      <% if can? :destroy, comment %>
        <div class="col-sm-1 navbar-right">
          <%= link_to [comment.automobile, comment], class: "Delete", method: :delete do %>
            <button type="button" class="btn btn-danger" aria-label="Left Align">
              <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
            </button>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

