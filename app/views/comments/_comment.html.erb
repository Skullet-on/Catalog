<div class="panel panel-primary">
  <div class="panel-body">
    <strong><%= comment.name %></strong> <%= time_ago_in_words(comment.created_at) %> ago
  </div>
  <div class="panel-footer"><%= comment.body %>
    <ul class="navbar-right">
      <%= link_to 'Delete', [comment.automobile, comment],
                   method: :delete,
                   class: "glyphicon glyphicon-remove-circle",
                   data: { confirm: 'Are you sure?' } %>
    </ul>
  </div>
</div>

